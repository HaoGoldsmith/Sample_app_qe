
<!--вставляем тайтл при помощи фрагмента(провайд)-->
<% provide(:title, "Forgot password") %>

<h1>Forgot password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<!--    не знаю, где урл password_resets_path. создает форму со скопом? пасворд_ресет(ф-я из юзер-мейлера)-->
    <%= form_with(url: password_resets_path, scope: :password_reset,
                  local: true) do |f| %>
<!--      отмечено под именем эмайл-->
      <%= f.label :email %>
<!--      в поле загружаемые данные идут в переменную эмайл, класса форм_сонтрол-->
      <%= f.email_field :email, class: 'form-control' %>
<!--      кнопка сабмит-->
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
